<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="3dp"
    app:cardBackgroundColor="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:id="@+id/rv_item_name"
            android:layout_weight="4"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sugar"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/rv_item_price"
            android:layout_weight="2"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 x 200"
            android:gravity="right"/>
        <ImageView
            android:layout_weight="0.5"
            android:padding="8dp"
            android:id="@+id/rv_item_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_edit_blue"/>
        <ImageView
            android:padding="8dp"
            android:layout_weight="0.5"
            android:id="@+id/rv_item_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_delete"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>