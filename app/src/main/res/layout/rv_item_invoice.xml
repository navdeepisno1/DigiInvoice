<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:padding="8dp"
        android:id="@+id/rv_item_invoice_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BN1234"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/icon_invoice"/>
            <TextView
                android:id="@+id/rv_item_invoice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="DD/YY/MMMM"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_item_invoice_edit"
                    android:layout_margin="6dp"
                    app:icon="@drawable/icon_edit"/>
                <Button
                    android:enabled="false"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:id="@+id/rv_item_invoice_delete"
                    android:layout_margin="6dp"
                    app:icon="@drawable/icon_delete"/>
            </LinearLayout>
            <Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/icon_download"
                android:id="@+id/rv_item_invoice_download"
                android:text="Download Invoice"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:padding="8dp"
        android:id="@+id/rv_item_invoice_bill_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BN1234"
        android:textStyle="bold"
        android:gravity="center"/>
</LinearLayout>
</androidx.cardview.widget.CardView>